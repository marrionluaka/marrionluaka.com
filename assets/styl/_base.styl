/* global styles */
*,
*::before,
*::after
  margin 0
  padding 0
  box-sizing inherit

*
  font-family "San-Francisco"
  font-weight 100
  color #1d1d1f

html
  box-sizing border-box
  font-size 62.5% // 10px/16px = 62.5% -> 1rem == 10px
  background #f5f5f7

p 
  line-height 2.2
  font-size 1rem

+breakpoint('md')
  p, li
    font-size 1.2rem

a:hover
  color initial
  text-decoration none

li
  list-style-type none

img
  max-width 100%
  height auto

/* divider */
.ml-underline
  margin 32px 0
  display block
  background #efecec
  padding 1px
  width 100px

/* overlay */
.overlay
  display flex
  align-items center
  justify-content center
  scroll-behavior smooth
  top 0
  left 0
  right 0
  bottom 0
  z-index 7
  position fixed
  background-color rgba(255, 255, 255, 0.95)
