.base-tile
  &__category
    color #86868b
    font-size 12px
    font-weight 600
    line-height 1.33337
    letter-spacing -.01em
    text-transform uppercase

  &__time
    color #86868b
    font-size 14px
    font-weight 600
    line-height 1.28577
    letter-spacing -.016em

  &:hover
    & ^[0]__img
      div
        -webkit-transform scale(1.03)
        transform scale(1.03)
      &::after
        background rgba(0,0,0,0.15)

  &__img
    position relative
    div
      width 100%
      height 100%
      z-index 0
      transition transform 400ms cubic-bezier(0.4, 0, 0.25, 1), opacity 1s cubic-bezier(0.4, 0, 0.25, 1), -webkit-transform 400ms cubic-bezier(0.4, 0, 0.25, 1)

    &::after
      content ''
      display inline-block
      width 100%
      height 100%
      background rgba(0,0,0,0)
      position absolute
      top 0
      left 0
      z-index 2
      -webkit-transition background 400ms cubic-bezier(0.4, 0, 0.25, 1)
      transition background 400ms cubic-bezier(0.4, 0, 0.25, 1)
